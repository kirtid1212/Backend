{
    "info": {
        "name": "Notification System API",
        "description": "API collection for testing the notification system",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Admin Notifications",
            "item": [
                {
                    "name": "Register FCM Token",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"token\": \"YOUR_FCM_TOKEN_HERE\",\n  \"deviceInfo\": {\n    \"browser\": \"Chrome\",\n    \"os\": \"Windows\",\n    \"userAgent\": \"Mozilla/5.0...\"\n  }\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v1/admin/notifications/register-token",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "admin",
                                "notifications",
                                "register-token"
                            ]
                        }
                    }
                },
                {
                    "name": "Get All Notifications",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/admin/notifications?page=1&limit=20",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "admin",
                                "notifications"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "20"
                                },
                                {
                                    "key": "type",
                                    "value": "ORDER_PLACED",
                                    "disabled": true
                                },
                                {
                                    "key": "isRead",
                                    "value": "false",
                                    "disabled": true
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Unread Count",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/admin/notifications/unread-count",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "admin",
                                "notifications",
                                "unread-count"
                            ]
                        }
                    }
                },
                {
                    "name": "Mark as Read",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/admin/notifications/{{notification_id}}/read",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "admin",
                                "notifications",
                                "{{notification_id}}",
                                "read"
                            ]
                        }
                    }
                },
                {
                    "name": "Mark All as Read",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/admin/notifications/read-all",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "admin",
                                "notifications",
                                "read-all"
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Notification",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/admin/notifications/{{notification_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "admin",
                                "notifications",
                                "{{notification_id}}"
                            ]
                        }
                    }
                },
                {
                    "name": "Send Test Notification",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"token\": \"YOUR_FCM_TOKEN_HERE\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v1/admin/notifications/test",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "admin",
                                "notifications",
                                "test"
                            ]
                        }
                    }
                },
                {
                    "name": "Unregister Token",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"token\": \"YOUR_FCM_TOKEN_HERE\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v1/admin/notifications/unregister-token",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "admin",
                                "notifications",
                                "unregister-token"
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "admin_token",
            "value": "YOUR_ADMIN_JWT_TOKEN",
            "type": "string"
        },
        {
            "key": "notification_id",
            "value": "",
            "type": "string"
        }
    ]
}